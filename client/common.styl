*
    box-sizing border-box

html
    font-size 62.5%

    body
        display flex
        justify-content center
        margin 0
        font 400 1.8rem/1.3 'Source Sans Pro', 'Arial', sans-serif
        color hsla(0,0,0,0.8)
        
        form *
        button
            font-family inherit
            font-size inherit
            border 0
                
        form
            width 100%
                
            .autosize
                position relative
        
                #comment
                    position absolute
                    top 0
                    height 100%
                    width 100%
                    overflow hidden
                    resize none
                
                #comment
                pre
                    padding 8px
                    white-space pre-wrap
                    word-wrap break-word
                    
                pre
                    visibility hidden
                    max-width 536px // hack because otherwise long words expand the body past post's max-width
                
            .row
                display flex
                justify-content space-between
                
            #title
                width 100%
                padding 8px
                font-size 2.4rem
                
            #firstPost
                width 100%
                padding 8px
                white-space pre-wrap
                
            #L_file
                display inline-block
                
                &:hover
                    color white // don't know why this is needed
                
            #file
                width 0px
                position absolute
                overflow hidden
                    
                &:focus + #L_file
                    background #f33
                    color white
    
        a
            text-decoration none

        ul
            margin 0
            padding 0
            
        pre
            margin 0
            padding 0
            
        button
            cursor pointer
        
        button
        input[type=submit]
        .btn
        .forelink
        .backlink
            margin-top 4px
            padding 2px 16px
            background hsla(0,0,0,0.1)
            color hsla(0,0,0,0.6)
            font 600 1.2rem 'Source Code Pro', monospace
            cursor pointer
            
            &:hover
                background #f33
                color white
                
            &:disabled
                visibility hidden
                
        .error
            color red

        .absent
            display none !important
        
        .invisible
            visibility hidden !important