*
    box-sizing border-box

html
    font-size 62.5%

    body
        display flex
        justify-content center
        margin 0
        font 400 1.8rem/1.3 'Source Sans Pro', 'Verdana', sans-serif
        color hsla(0,0,0,0.8)
        
        form *
        button
            font-family inherit
            font-size inherit
            color inherit
            background inherit
            border inherit
                
        form
            width 100%
            
            input[type='text']
            textarea
                border 1px solid hsla(0,0,0,0.25)
                
            input[type='submit']
                padding 12px 36px
                
            .autosize
                position relative
        
                #comment
                    position absolute
                    top 0
                    height 100%
                    width 100%
                    overflow hidden
                    resize none
                
                #comment
                pre
                    padding 8px
                    white-space pre-wrap
                    word-wrap break-word
                    
                pre
                    visibility hidden
                    max-width 536px // hack because otherwise long words expand the body past post's max-width
                
            .row
                display flex
                justify-content space-between
                
            #title
                width 100%
                margin-bottom 16px
                padding 8px
                font-size 2.4rem
                
            #firstPost
                width 100%
                padding 8px
                white-space pre-wrap
                
            #L_file
                display inline-block
                padding 8px 24px
                font-size 1.2rem
                
                &:hover
                    color white // don't know why this is needed
                
            #file
                width 0px
                position absolute
                overflow hidden
                    
                &:focus + #L_file
                    background #f33
                    color white
    
        a
            text-decoration none

        ul
            margin 0
            padding 0
            
        pre
            margin 0
            padding 0
            
        button
            cursor pointer
        
        button
        input[type=submit]
        .btn
        .forelink
        .backlink
            background hsla(0,0,0,0.1)
            color hsla(0,0,0,0.6)
            font-family 'Source Code Pro', monospace
            font-weight 600
            // border-left 4px solid #f33
            
            &:hover
            &:focus
                background #f33
                color white
                
            &:disabled
                border-color inherit
                
                &:hover
                &:focus
                    background @background
                    color @color
                    text-decoration line-through
            
            &.bg
                border 0

        .absent
            display none !important
        
        .invisible
            visibility hidden !important