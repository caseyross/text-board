.post-container
    width 896px
    margin 0 auto
    
    .post-header
        width 80px
        height 80px
        display inline-block
        vertical-align top
            
        .reply-hint
            display inline-block
            font-size 1.2rem
            color gray
        
        .post-reply-btn
            margin 16px 0
            border 1px solid
            border-radius 4px
            color gray
            background-color white
            cursor pointer
            
            &:hover
            &:focus
                color black
    
    .post-body
        width 640px
        padding 16px
        display inline-block
        white-space pre-wrap
        
        a.backlink
            font-size 2rem
            font-family monospace
            text-decoration none
            background gray
            color white
            
            &:hover
                color blue
                
        .quote
            color red
        
    .post-meta
        width 160px
        padding 16px
        font-size 1.2rem
        display inline-block
        vertical-align top
        
        .post-time
            color gray
        
        .post-forelinks
            
            a.forelink
                font-size 1.6rem
                font-family monospace
                text-decoration none
                background gray
                color white
                
                &:hover
                    color blue