.post-container
    width 880px
    margin 0 auto
    
    .post-header
        width 64px
        height 64px
        display inline-block
        vertical-align top
        
        .post-reply-btn
            margin 16px 32px
            border 1px solid
            border-radius 4px
            color gray
            background-color white
            
            &:hover
            &:focus
                width 64px
                margin-left 0
                color white
                background-color gray
                
                .front
                    display none
                
                .back
                    display inline
            
            .back
                display none
    
    .post-body
        width 640px
        padding 16px
        display inline-block
        white-space pre-wrap
        
        a.backlink
            text-decoration none
            font-weight bold
            color black
            
            &:hover
                color blue
        
    .post-meta
        width 160px
        padding 16px
        font-size 1.2rem
        display inline-block
        vertical-align top
        
        .post-time
            color gray
        
        .post-forelinks
            
            a.forelink
                text-decoration none
                font-weight bold
                color black
                
                &:hover
                    color blue