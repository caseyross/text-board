cw = 848px

.post-container
    position relative
    @media screen and (max-width: cw)
        width 90vw
    @media screen and (min-width: cw)
        width cw
    margin 0 auto
    
    
    .post-header
        position absolute
        top 0
        bottom 0
        width 40px
        margin-top 16px
        border-top 1px solid gray
        display inline-block
        vertical-align top
        cursor pointer
            
        &:hover
        &:focus
            background #EEE
        
        .reply-hint
            display inline-block
            font-size 1.2rem
        
        .post-reply-btn
            border 0
            float right
            color gray
            font-family monospace
    
    .post-body
        @media screen and (min-width: cw)
            width 640px
        margin-left 40px
        padding 16px
        display inline-block
        white-space pre-wrap
        font-size 1.6rem
        line-height 1.5
        
        a.backlink
            font-size 2rem
            font-family monospace
            text-decoration none
            background gray
            color white
            
            &:hover
                color blue
                
        .quote
            color #F33
        
    .post-meta
        @media screen and (min-width: cw)
            width 160px
        @media screen and (max-width: cw)
            margin-left 40px
        padding 16px 0 16px 16px
        font-size 1.2rem
        @media screen and (min-width: cw)
            display inline-block
        vertical-align top
        
        .post-time
            @media screen and (max-width: cw)
                display inline
            color gray
        
        .post-forelinks
            @media screen and (max-width: cw)
                margin-left 16px
                display inline
            
            a.forelink
                font-size 1.6rem
                font-family monospace
                text-decoration none
                background gray
                color white
                
                &:hover
                    color blue