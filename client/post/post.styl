.postContainer
    width 864px
    margin 0 auto
    
    .postNumber
        width 48px
        height 48px
        display inline-block
        vertical-align top
        
        .postReplyBtn
            width 32px
            height 32px
            margin-left 8px
            margin-top 8px
            border-radius 32px
            border 1px solid
            text-align center
            
            .numberLg
                margin-top 3px
                font-size 2rem
                
            .numberMd
                margin-top 6px
                font-size 1.6rem
            
            .numberSm
                margin-top 9px
                font-size 1.2rem
    
    .postBody
        width 608px
        padding 16px
        font-size 1.6rem
        display inline-block
        white-space pre-wrap
        
    .postInfo
        width 128px
        padding 16px
        font-size 1.2rem
        display inline-block
        vertical-align top
        
        .postTime
            color gray