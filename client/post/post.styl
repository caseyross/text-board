.postContainer
    width 860px // Actual width should be 848, but for some reason an extra 10 is needed to fit everything (choice of font matters here)
    
    .postNumber
        width 48px
        height 48px
        font-size 24px
        display inline-block
        vertical-align top
    
    .postBody
        width 608px
        padding 16px
        font-size 16px
        display inline-block
        white-space pre-wrap
        
        .backlink
            font-weight bold
        
    .postInfo
        width 128px
        padding 16px
        font-size 12px
        display inline-block
        vertical-align top
        
        .postTime
            color gray
        
        .postReplies
            font-weight bold