.post-container
    width 880px
    margin 0 auto
    
    .post-header
        width 64px
        height 64px
        display inline-block
        vertical-align top
        
        .post-reply-btn
            width 32px
            height 32px
            margin-left 32px
            margin-top 8px
            border-radius 16px
            border 1px solid
            background-color white
            
            &:hover
            &:focus
                width 64px
                margin-left 0
                color white
                background-color black
                
                .front
                    display none
                
                .back
                    display inline
            
            .back
                display none
            
            .post-number-lg
                font-size 2rem
            
            .post-number-md
                font-size 1.6rem
            
            .post-number-sm
                font-size 1.2rem
    
    .post-body
        width 640px
        padding 16px
        display inline-block
        white-space pre-wrap
        
        a.backlink
            text-decoration none
            font-weight bold
            color black
            
            &:hover
                color blue
        
    .post-meta
        width 160px
        padding 16px
        font-size 1.2rem
        display inline-block
        vertical-align top
        
        .post-time
            color gray
        
        .post-replies
            
            a
                text-decoration none
                font-weight bold
                color black
                
                &:hover
                    color blue