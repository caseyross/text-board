@import '../mixins'

.post
    display flex
    max-width 800px
    
    ::selection
        color white
        background #f33
        
    a
    button
        margin-top 4px
        padding 2px 16px
        background hsla(0,0,0,0.1)
        color hsla(0,0,0,0.7)
        font-family monospace
        cursor pointer
    
    header
        flex 0 0 @min-width
        min-width 116px
        padding 16px
        display flex
        flex-flow column wrap
        align-items flex-end
        color hsla(0,0,0,0.6)
        
        time
            font-size 1.4rem
    
    .body
        flex 1 1 auto
        padding 16px
        
        figure
            margin 4px 0
            margin-bottom 12px
            background hsla(0,0,0,0.1)
            cursor zoom-in
            
            .thumb
                display flex
                align-items center
                
                figcaption
                    flex 1 1 auto
                    padding-left 16px
                    display inline-block
            
            img.full
                width 100%
                cursor zoom-out
            
        .comment
            white-space pre-wrap
            font 1.6rem/1.5
                
            blockquote
                margin 4px 0
                padding-left 8px
                border-left 4px solid #f33
        
    .options
        flex 0 0 @min-width
        min-width 116px
        padding 16px