.post
    display flex
    max-width 960px
    
    ::selection
        color white
        background #f33
    
    header
        flex 0 0 96px
        margin 16px 16px 0 0
        display flex
        flex-flow column wrap
        align-items flex-end
        color #999
        
        time
            font-size 1.4rem
            
            .seconds
                font-size 1rem
    
    .body
        flex 1 1 auto
        padding 16px
        display flex
        flex-wrap wrap
        
        .image
            flex 0 0 auto
            padding 0 8px 8px 0
            cursor zoom-in
            
            img.full
                width 100%
                cursor zoom-out
            
        .comment
            flex 1 1 auto
            white-space pre-wrap
            font-size 1.6rem
            line-height 1.5
                
            a.backlink
                font-size 2rem
                
                &:hover
                    background #ccc
                    
            .quote
                color #f33
        
    .options
        flex 0 0 96px
        padding 16px
        
        .reply
            
        
        .forelinks
        
            a.forelink
                font-size 1.6rem
                
                &:hover
                    background #ccc
                    
    a
        font-family monospace
        background #f33
        color white