.post-container
    width 864px
    margin 0 auto
    
    .post-header
        width 48px
        height 48px
        display inline-block
        vertical-align top
        
        .post-reply-btn
            width 32px
            height 32px
            margin-left 8px
            margin-top 8px
            border-radius 16px
            border 1px solid
            text-align center
            
            .post-number-lg
                margin-top 2px
                font-size 2rem
                
            .post-number-md
                margin-top 5px
            
            .post-number-sm
                margin-top 8px
                font-size 1.2rem
    
    .post-body
        width 640px
        padding 16px
        display inline-block
        white-space pre-wrap
        
        a.backlink
            text-decoration none
            font-weight bold
            color black
            
            &:hover
                color blue
        
    .post-meta
        width 160px
        padding 16px
        font-size 1.2rem
        display inline-block
        vertical-align top
        
        .post-time
            color gray
        
        .post-replies
            
            a
                text-decoration none
                font-weight bold
                color black
                
                &:hover
                    color blue