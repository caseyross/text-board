.post-container
    width 864px
    margin 0 auto
    
    .post-header
        width 48px
        height 48px
        display inline-block
        vertical-align top
        
        .post-reply-btn
            width 32px
            height 32px
            margin-left 8px
            margin-top 8px
            border-radius 32px
            border 1px solid
            text-align center
            
            .post-number-lg
                margin-top 3px
                font-size 2rem
                
            .post-number-md
                margin-top 6px
            
            .post-number-sm
                margin-top 9px
                font-size 1.2rem
    
    .post-body
        width 608px
        padding 16px
        display inline-block
        white-space pre-wrap
        
    .post-meta
        width 128px
        padding 16px
        font-size 1.2rem
        display inline-block
        vertical-align top
        
        .post-time
            color gray