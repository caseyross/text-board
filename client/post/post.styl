@import '../mixins'

.post
    display flex
    max-width 800px
    margin 16px
    
    ::selection
        color white
        background #f33
    
    header
        flex 0 0 @min-width
        min-width 116px
        padding 16px
        display flex
        flex-flow column wrap
        align-items flex-end
        color hsla(0,0,0,0.4)
        font-weight 600
        
        time
            font-size 1.4rem
    
    .body
        flex 1 1 auto
        padding 16px
        
        figure
            margin 4px 0 24px 0
            line-height 1
            cursor zoom-in
            
            .thumb
                display flex
                align-items center
                background hsla(0,0,0,0.1)
                
                figcaption
                    flex 1 1 auto
                    padding 0 16px
                    display flex
                    justify-content space-between
                    color hsla(0,0,0,0.4)
                    font-size 1.6rem
                    font-weight 600
            
            .full
                width 100%
                cursor zoom-out
                
                img
                    display block
            
        .comment
            white-space pre-wrap
                
            blockquote
                margin 16px 8px
                padding-left 16px
                color hsla(0,0,0,0.6)
                border-left 4px solid hsla(0,0,0,0.25)
        
    .options
        flex 0 0 @min-width
        min-width 116px
        padding 16px