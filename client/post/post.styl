.post-container
    display flex
    max-width 960px
    
    ::selection
        color white
        background #f33
    
    .post-header
        flex 0 0 48px
        margin 16px 16px 0 0
        color #999
        cursor pointer
        
        .reply-hint
            float right
            
        .post-id
            float right
    
    .post-body
        flex 1 1 auto
        padding 16px
        display flex
        flex-wrap wrap
        
        .post-image
            flex 0 0 auto
            padding 0 8px 8px 0
            cursor zoom-in
            
            img.full
                width 100%
                cursor zoom-out
            
        .post-text
            flex 1 1 auto
            white-space pre-wrap
            font-size 1.6rem
            line-height 1.5
                
            a.backlink
                font-size 2rem
                
                &:hover
                    background #ccc
                    
            .quote
                color #f33
        
    .post-meta
        flex 0 0 96px
        padding 16px
        font-size 1.2rem
        
        .post-time
            color #999
        
        .post-forelinks
            
            a.forelink
                font-size 1.6rem
                
                &:hover
                    background #ccc
                    
    a
        text-decoration none
        font-family monospace
        background #f33
        color white